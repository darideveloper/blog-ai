---
export interface Props {
	date: Date;
}

const { date } = Astro.props;
const date_text = date.toLocaleDateString('es-mx', {
	year: 'numeric',
	month: 'short',
	day: 'numeric',
})
const date_title = date.toLocaleDateString('es-mx', {
	year: 'numeric',
	month: 'numeric',
	day: 'numeric',
})
---

<time pubdate datetime={date.toISOString()} title={date_title}>
	{date_text}
</time>
